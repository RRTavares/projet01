//Questao 3

#include<stdio.h>
#include<stdlib.h>
float DiferencaVetor(float*v, int n);

int main(void){
	int n, i;
	float*v;
	
	printf("Digite o numero de elementos do vetor: ");
	scanf("%d",&n);
	
	v = (float*)malloc(n*sizeof(float));
	
	for(i=0;i<n;i++){
		printf("\nDigite o valor de v[%d]: ",i);
		scanf("%f",&v[i]);
	}
	
	printf("\nA maior diferenÃ§a eh de %.2f",DiferencaVetor(v, n));

	free(v);
return 0;
}
float DiferencaVetor(float*v, int n){
	
	int i, d[i];
	float maior=0;
	for( i=0;i<n-1;i++){
		d[i]=v[i]-v[i+1];
	
	if(d[i]>maior)
	maior=d[i];}

return maior;

	
}
